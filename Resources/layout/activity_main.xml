<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#ff0d47a1">

    <GridLayout 
        android:rowCount="11" 
        android:columnCount="2"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout1"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_row="0"
            android:layout_column="0"
            android:id="@+id/textView1"
            android:text="Input :"
            android:textColor="#ffff6d00"
            android:textStyle="bold"
            android:textSize="@dimen/abc_dialog_padding_top_material"
            android:layout_marginLeft="@dimen/abc_action_bar_overflow_padding_end_material"
            android:layout_marginTop="@dimen/abc_action_bar_overflow_padding_end_material" />
        <TextView
            android:layout_row="0"
            android:layout_column="1"
            android:text="     "/>
        <TextView
            android:layout_row="1"
            android:layout_column="0"
            android:id="@+id/textView2"
            android:text="IBO (feet per second) :"
            android:textStyle="normal"
            android:textSize="@dimen/abc_dialog_padding_top_material"
            android:layout_marginLeft="@dimen/abc_action_bar_overflow_padding_end_material"
            android:layout_marginTop="@dimen/abc_action_bar_overflow_padding_end_material"
            android:textColor="@android:color/background_light" />
        <EditText
            android:layout_row="1"
            android:layout_column="1"
            android:id="@+id/edit1"
            android:layout_width="@dimen/abc_action_bar_content_inset_with_nav"
            android:textStyle="normal"
            android:textSize="@dimen/abc_dialog_padding_top_material"
            android:layout_marginLeft="@dimen/abc_alert_dialog_button_dimen"
            android:layout_marginTop="@dimen/abc_action_bar_overflow_padding_end_material"
            android:typeface="normal"
            android:textAlignment="center"
            android:background="@android:color/background_light"
            android:textColor="@android:color/background_dark"
            android:inputType="text" />
        <TextView
            android:layout_row="2"
            android:layout_column="0"
            android:id="@+id/textView3"
            android:text="Draw Length (inches) :"
            android:textStyle="normal"
            android:textSize="@dimen/abc_dialog_padding_top_material"
            android:layout_marginLeft="@dimen/abc_action_bar_overflow_padding_end_material"
            android:layout_marginTop="@dimen/abc_action_bar_overflow_padding_end_material"
            android:textColor="@android:color/background_light" />
        <EditText
            android:layout_row="2"
            android:layout_column="1"
            android:id="@+id/edit2"
            android:layout_width="@dimen/abc_action_bar_content_inset_with_nav"
            android:textStyle="normal"
            android:textSize="@dimen/abc_dialog_padding_top_material"
            android:layout_marginLeft="@dimen/abc_alert_dialog_button_dimen"
            android:layout_marginTop="@dimen/abc_action_bar_overflow_padding_end_material"
            android:typeface="normal"
            android:textAlignment="center"
            android:background="@android:color/background_light" />
        <TextView
            android:layout_row="3"
            android:layout_column="0"
            android:id="@+id/textView4"
            android:text="Draw Weight (pounds) :"
            android:textStyle="normal"
            android:textSize="@dimen/abc_dialog_padding_top_material"
            android:layout_marginLeft="@dimen/abc_action_bar_overflow_padding_end_material"
            android:layout_marginTop="@dimen/abc_action_bar_overflow_padding_end_material"
            android:textColor="@android:color/background_light" />
        <EditText
            android:layout_row="3"
            android:layout_column="1"
            android:id="@+id/edit3"
            android:layout_width="@dimen/abc_action_bar_content_inset_with_nav"
            android:textStyle="normal"
            android:textSize="@dimen/abc_dialog_padding_top_material"
            android:layout_marginLeft="@dimen/abc_alert_dialog_button_dimen"
            android:layout_marginTop="@dimen/abc_action_bar_overflow_padding_end_material"
            android:typeface="normal"
            android:textAlignment="center"
            android:background="@android:color/background_light" />
        <TextView
            android:layout_row="4"
            android:layout_column="0"
            android:id="@+id/textView4"
            android:text="Arrow Weight (grains) :"
            android:textStyle="normal"
            android:textSize="@dimen/abc_dialog_padding_top_material"
            android:layout_marginLeft="@dimen/abc_action_bar_overflow_padding_end_material"
            android:layout_marginTop="@dimen/abc_action_bar_overflow_padding_end_material"
            android:textColor="@android:color/background_light" />
        <EditText
            android:layout_row="4"
            android:layout_column="1"
            android:id="@+id/edit4"
            android:layout_width="@dimen/abc_action_bar_content_inset_with_nav"
            android:textStyle="normal"
            android:textSize="@dimen/abc_dialog_padding_top_material"
            android:layout_marginLeft="@dimen/abc_alert_dialog_button_dimen"
            android:layout_marginTop="@dimen/abc_action_bar_overflow_padding_end_material"
            android:typeface="normal"
            android:textAlignment="center"
            android:background="@android:color/background_light" />
        <TextView
            android:layout_row="5"
            android:layout_column="0"
            android:id="@+id/textView5"
            android:text="Output :"
            android:textColor="#ffff6d00"
            android:textStyle="bold"
            android:textSize="@dimen/abc_dialog_padding_top_material"
            android:layout_marginLeft="@dimen/abc_action_bar_overflow_padding_end_material"
            android:layout_marginTop="@dimen/abc_action_bar_overflow_padding_end_material" />
        <TextView
            android:layout_row="0"
            android:layout_column="1"
            android:text="     "/>

        <TextView
            android:layout_row="6"
            android:layout_column="0"
            android:id="@+id/textView6"
            android:text="True Arrow Speed (fps) :"
            android:textStyle="normal"
            android:textSize="@dimen/abc_dialog_padding_top_material"
            android:layout_marginLeft="@dimen/abc_action_bar_overflow_padding_end_material"
            android:layout_marginTop="@dimen/abc_action_bar_overflow_padding_end_material"
            android:textColor="@android:color/background_light" />
        <TextView
            android:layout_row="6"
            android:layout_column="1"
            android:id="@+id/textView7"
            android:textStyle="normal"
            android:textSize="@dimen/abc_dialog_padding_top_material"
            android:layout_marginLeft="@dimen/abc_action_bar_content_inset_with_nav"
            android:layout_marginTop="@dimen/abc_action_bar_overflow_padding_end_material"
            android:textColor="@android:color/background_light"/>
        <TextView
            android:layout_row="7"
            android:layout_column="0"
            android:id="@+id/textView8"
            android:text="Kinetic Energy (lb-ft/s2) :"
            android:textStyle="normal"
            android:textSize="@dimen/abc_dialog_padding_top_material"
            android:layout_marginLeft="@dimen/abc_action_bar_overflow_padding_end_material"
            android:layout_marginTop="@dimen/abc_action_bar_overflow_padding_end_material"
            android:textColor="@android:color/background_light" />
        <TextView
            android:layout_row="7"
            android:layout_column="1"
            android:id="@+id/textView9"
            android:textStyle="normal"
            android:textSize="@dimen/abc_dialog_padding_top_material"
            android:layout_marginLeft="@dimen/abc_action_bar_content_inset_with_nav"
            android:layout_marginTop="@dimen/abc_action_bar_overflow_padding_end_material"
            android:textColor="@android:color/background_light"/>
        <TextView
            android:layout_row="8"
            android:layout_column="0"
            android:id="@+id/textView10"
            android:text="Momentum (ft-lb) :"
            android:textStyle="normal"
            android:textSize="@dimen/abc_dialog_padding_top_material"
            android:layout_marginLeft="@dimen/abc_action_bar_overflow_padding_end_material"
            android:layout_marginTop="@dimen/abc_action_bar_overflow_padding_end_material"
            android:textColor="@android:color/background_light" />
        <TextView
            android:layout_row="8"
            android:layout_column="1"
            android:id="@+id/textView11"
            android:textStyle="normal"
            android:textSize="@dimen/abc_dialog_padding_top_material"
            android:layout_marginLeft="@dimen/abc_action_bar_content_inset_with_nav"
            android:layout_marginTop="@dimen/abc_action_bar_overflow_padding_end_material"
            android:textColor="@android:color/background_light"/>


           <Button
                android:layout_row="9"
                android:layout_column="0"
                android:id="@+id/calc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calc"
                android:background="@android:color/holo_orange_dark"
                android:textColor="@android:color/background_light"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/abc_action_bar_overflow_padding_end_material"
                android:layout_marginLeft="@dimen/abc_action_bar_overflow_padding_end_material" />
            <Button
                android:layout_row="9"
                android:layout_column="1"                        
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next"
                android:background="@android:color/holo_orange_dark"
                android:textColor="@android:color/background_light"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/abc_action_bar_overflow_padding_end_material"
                android:layout_marginLeft="@dimen/abc_action_bar_overflow_padding_end_material"/>



